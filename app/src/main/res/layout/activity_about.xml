<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.juborajsarker.voicerecorder.activities.AboutActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_margin="5dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_icon"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:elevation="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:padding="8dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="App Name"
                        android:textColor="#aa000000"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_weight="1"/>


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="Voice Recorder"
                        android:textColor="#aa000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:padding="8dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Verson Code"
                        android:textColor="#aa000000"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_weight="1"/>



                    <TextView
                        android:id="@+id/versionCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#aa000000"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:textStyle="bold"/>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:padding="8dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Version Name"
                        android:textColor="#aa000000"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_weight="1"/>



                    <TextView
                        android:id="@+id/versionName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="1.0.0"
                        android:textColor="#aa000000"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:textStyle="bold"/>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:padding="8dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Developer Name"
                        android:textColor="#aa000000"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_weight="1"/>



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/juboraj_sarker"
                        android:textColor="#1739e2"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:onClick="myWebsite"/>



                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:padding="8dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Last Updated On"
                        android:textColor="#aa000000"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_weight="1"/>



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="10 December, 2017"
                        android:textColor="#aa000000"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:textStyle="bold"/>



                </LinearLayout>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:padding="8dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Package Name"
                        android:textColor="#aa000000"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_weight="1"/>



                    <TextView
                        android:id="@+id/packageName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="com.juborajsarker.voicerecorder"
                        android:textColor="#aa000000"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:textStyle="bold"/>



                </LinearLayout>





            </LinearLayout>




        </ScrollView>


    </LinearLayout>






</LinearLayout>
